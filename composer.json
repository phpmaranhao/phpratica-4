{
    "name": "lvieira/silex-arango-skeleton",
    "description": "Basic skeleton for applications using ArangoDB",
    "type": "project",
    "require": {
        "php": ">=7.0.18",
        "silex/silex": "^2.0",
        "triagens/arangodb": "^3.1",
        "symfony/yaml": "^3.2",
        "twig/twig": "^2.3",
        "respect/validation": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "6.2.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "AppTests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas S. Vieira",
            "email": "lucassouzavieiraengcomp@gmail.com"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "cp app.example.yml app.yml"
        ]
    },
    "minimum-stability": "stable"
}
